@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1 class="text-black font-monospace text-center">Hotel Booking</h1>

<form method="get">
    <div class="flex-row align-content-center">
        <select asp-for="Type">
            <option value="Single">Single</option>
            <option value="Double">Double</option>
        </select>
        <input type="date" asp-for="StartDate" />
        <input type="date" asp-for="EndDate" />
        <button type="submit" class="btn btn-sm btn-outline-secondary">Show available rooms</button>
    </div>
</form>

<br/>

@if (Model.Rooms.Any())
{
    <form method="post">
        <input type="hidden" value="@Model.StartDate" asp-for="StartDate" />
        <input type="hidden" value="@Model.EndDate" asp-for="EndDate" />

        <div class="row">
            @foreach (var room in Model.Rooms)
            {
                <div class="col-md-3">
                    <div class="card mb-4 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">Room @room.Number</h5>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <input type="hidden" value="@room.Number" asp-for="SelectedRoomNumber"/>
                                    <button type="submit" class="btn btn-sm btn-outline-secondary">Book Now</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </form>
}




